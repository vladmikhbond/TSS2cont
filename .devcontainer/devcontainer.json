{
	"name": "pss-contfiner",

	"build": {
		"dockerfile": "../Dockerfile"
	},


	"mounts": [
        // Монтуємо локальну папку ./data в контейнер як /data
        "source=${localWorkspaceFolder}/data,target=/data,type=bind"
    ],
   
