    "version": "0.2.0",
    "configurations": [
        {
            "name": "PSS debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app", 
                "--host", "0.0.0.0", "--port", "7000", 
                "--reload"
            ],
            "jinja": true
        },
        {
            "name": "Pytest debug",
            "type": "debugpy",
            "module": "pytest",
            "args": ["tests/test_executors.py", "-q", "--disable-warnings"],
            "request": "launch",
            "console": "integratedTerminal"
        }

        
    ]
}